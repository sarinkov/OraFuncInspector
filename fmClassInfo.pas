type
  TClassInfoForm = class(TBaseDialogForm)
    edtName: TEdit;
    edtCassName: TEdit;
    lblName: TLabel;
    lblClassName: TLabel;
  private
  public
  end;

procedure ShowFormInfo(F: TForm);

implementation

{$R *.dfm}

procedure ShowFormInfo(F: TForm);
var
  Info: TClassInfoForm;
begin
  Info := TClassInfoForm.Create(Application);
  try
    with Info do begin
      Caption          := 'Form info';
      edtCassName.Text := F.ClassName;
      edtName.Text     := F.Name;

      Info.ShowModal;
    end;
  finally
    FreeAndNil(Info);
  end;
end;

end.
